from transformers import pipeline  

# Åiir oluÅŸturmak iÃ§in Hugging Face'in text-generation pipeline'Ä±nÄ± kullan âœ¨
def generate_poem(theme):
    generator = pipeline("text-generation", model="gpt2")  # GPT-2 modeli
    prompt = f"Write a poem about {theme}"  # KullanÄ±cÄ±nÄ±n temasÄ±nÄ± ÅŸablona ekle ğŸµ
    poems = generator(prompt, max_length=50, num_return_sequences=1)  # Åiir Ã¼ret
    return poems[0]['generated_text']  # Ãœretilen ÅŸiiri dÃ¶ndÃ¼r ğŸš€

# KullanÄ±cÄ±dan tema al ve ÅŸiir oluÅŸtur ğŸŒŸ
if __name__ == "__main__":
    user_theme = input("Enter a theme for your poem: ")  # KullanÄ±cÄ± girdisi ğŸ¤
    print("\nHere is your poem: \n")  # Åiir baÅŸlÄ±ÄŸÄ± ğŸ“œ
    print(generate_poem(user_theme))  # Åiiri yazdÄ±r ğŸ‰
