# We use the 'random' library again for random choices ğŸ²
import random # This line loads the module needed for random selections. ğŸ“š

# Define our emoji lists (the story fragments) âœï¸ğŸ­
characters = ["ğŸ§‘â€ğŸ’»", "ğŸ‘©â€ğŸš€", "ğŸ•µï¸â€â™€ï¸", "ğŸ¦¸â€â™‚ï¸", "ğŸ§œâ€â™€ï¸", "ğŸ‘¨â€ğŸ¨", "ğŸ¤–", "ğŸ¦„"] # The protagonists of the story ğŸ¤©
actions = ["ğŸƒâ€â™€ï¸", "ğŸ’ƒ", "ğŸš´â€â™‚ï¸", "ğŸ¤", "âœˆï¸", "ğŸ“–", "ğŸ³", "ğŸ’¡"] # What the character does ğŸ’ª
places_objects = ["ğŸ ", "ğŸŒ²", "ğŸ–ï¸", "ğŸŒƒ", "ğŸ’»", "ğŸ•", "ğŸ", "ğŸ”‘"] # Where the event happens or a related object ğŸŒğŸ
feelings = ["ğŸ˜‚", "ğŸ˜", "ğŸ˜­", "ğŸ¤”", "ğŸ¥³", "ğŸ¤¯", "ğŸ˜´", "ğŸ˜±"] # The emotional state at the end of the story â¤ï¸ğŸ¤¯

# Choose a random emoji from each list ğŸ¤”â¡ï¸âœ¨
chosen_character = random.choice(characters) # Selects a random emoji from the 'characters' list. ğŸ°
